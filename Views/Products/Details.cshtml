@model CLDV6212_PART_3.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container-product">
    <h1>Details</h1>

    <div class="product-details-container">
        <div class="product-details-header">
            Product Details
        </div>
        <div class="product-details-content">
            <div class="row">
                <div class="col-sm-3">
                    <img src="@Model.ImageUrlpath" class="product-image" />
                </div>
                <div class="col-sm-9">
                    <div class="product-details-label">Name:</div>
                    <div class="product-details-value">@Model.Name</div>

                    <div class="product-details-label">Description:</div>
                    <div class="product-details-value">@Model.ProductDescription</div>

                    <div class="product-details-label">Price:</div>
                    <div class="product-details-value">@Model.Price</div>

                    <div class="product-details-label">Category:</div>
                    <div class="product-details-value">@Model.Category</div>

                    <div class="product-details-label">Availability:</div>
                    <div class="product-details-value availability">
                        @{
                            if (Model.Availability.HasValue && Model.Availability.Value)
                            {
                                <p class="available-true">Available</p>
                            }
                            else
                            {
                                <p class="available-false">Out of Stock</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="product-options">
        <a asp-action="Edit" asp-route-id="@Model?.ProductId" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

</div>

<style>
    /* Container Styling */
    .container-product {
        max-width: 800px;
        margin: 30px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        color: #333;
    }

    /* Header Styling */
    h1 {
        color: #f07b26;
        font-size: 2.5em;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Product Details Section */
    .product-details-container {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
    }

    .product-details-header {
        font-size: 1.8em;
        color: #f07b26;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Product Image */
    .product-image {
        width: 100%;
        max-width: 200px;
        height: auto;
        object-fit: cover;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Product Details Labels */
    .product-details-label {
        font-weight: bold;
        color: #555;
        margin-top: 15px;
    }

    /* Product Details Values */
    .product-details-value {
        margin-bottom: 10px;
        color: #333;
        font-size: 1.1em;
    }

    .availability .available-true {
        color: green;
        font-weight: bold;
    }

    .availability .available-false {
        color: red;
        font-weight: bold;
    }

    /* Buttons and Links */
    .product-options {
        text-align: center;
        margin-top: 30px;
    }

        .product-options a {
            font-weight: bold;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            margin: 5px;
            display: inline-block;
        }

        .product-options .btn-primary {
            background-color: #f07b26;
            color: #fff;
        }

            .product-options .btn-primary:hover {
                background-color: #d96a1f;
            }

        .product-options .btn-secondary {
            background-color: #534b58;
            color: #fff;
        }

            .product-options .btn-secondary:hover {
                background-color: #3d3a44;
            }

</style>
