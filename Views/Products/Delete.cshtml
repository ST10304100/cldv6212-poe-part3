@model CLDV6212_PART_3.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<div class="delete-container">
    <h1>Delete Product</h1>

    <h3>Are you sure you want to delete this item?</h3>
    <div>
        <h4>Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProductDescription)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                R @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Availability)
            </dt>
            <dd class="col-sm-9">
                @{
                    if (Model.Availability.HasValue && Model.Availability.Value)
                    {
                        <p class="available-true">Available</p>
                    }
                    else
                    {
                        <p class="available-false">Out of Stock</p>
                    }
                }
            </dd>
            <dt class="col-sm-3">
                Product Image
            </dt>
            <dd class="col-sm-9">
                <img src="@Model.ImageUrlpath" class="product-image" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ProductId" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <i class="fa fa-reply" aria-hidden="true"></i><a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>

<style>
    /* Container Styling */
    .delete-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 25px;
        background-color: #fff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        color: #333;
    }

    h1 {
        color: #f07b26;
        font-size: 2.5em;
        text-align: center;
        margin-bottom: 20px;
    }

    h3 {
        font-size: 1.5em;
        text-align: center;
        margin-bottom: 30px;
        color: #333;
    }

    h4 {
        font-size: 1.2em;
        color: #f07b26;
        font-weight: bold;
        margin-bottom: 15px;
    }

    /* Definition List Styling */
    dl.row {
        margin-bottom: 25px;
    }

    dt {
        font-weight: bold;
        color: #333;
        margin-top: 10px;
    }

    dd {
        margin-bottom: 15px;
    }

    .product-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Availability Styling */
    .available-true {
        color: green;
        font-weight: bold;
    }

    .available-false {
        color: red;
        font-weight: bold;
    }

    /* Button Styling */
    .btn-danger {
        background-color: #f07b26;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #d96a1f;
        }

    /* Back Link Styling */
    .delete-container div i {
        color: #f07b26;
        margin-right: 8px;
    }

    .delete-container div a {
        color: #f07b26;
        text-decoration: none;
        font-weight: bold;
    }

        .delete-container div a:hover {
            text-decoration: underline;
        }
</style>
