@model CLDV6212_PART_3.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="edit-product">
    <h1>Edit Product</h1>
    <h4>Product Details</h4>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductId" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label"></label>
            <input asp-for="ProductDescription" class="form-control" />
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Category" class="control-label"></label>
            <select asp-for="Category" class="form-control">
                <option value="">-- Select a Category --</option>
                <option value="helmets">Helmet</option>
                <option value="body-suit">Body Suit</option>
                <option value="footwear">Footwear</option>
                <option value="gear">Gear</option>
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Availability" class="control-label"></label>
            <select asp-for="Availability" class="form-control">
                <option value="True">True</option>
                <option value="False">False</option>
            </select>
            <span asp-validation-for="Availability" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrlpath" class="control-label">Product Image</label>
            <div>
                <img src="@Model.ImageUrlpath" alt="Product Image" style="max-width: 200px; max-height: 200px; display: block; margin: 10px 0;" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary btn-edit" />
        </div>
    </form>

    <div>
        <i class="fa fa-reply" aria-hidden="true"></i><a asp-action="Index">Back to List</a>
    </div>
</div>
<style>
    /* Edit Product Container */
    .edit-product {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        color: #333;
    }

    /* Header Styles */
    h1 {
        color: #f07b26;
        font-size: 2.5em;
        text-align: center;
        margin-bottom: 20px;
    }

    h4 {
        color: #534b58;
        font-size: 1.4em;
        font-weight: bold;
        margin-bottom: 15px;
    }

    /* Form Styling */
    form {
        margin-top: 20px;
    }

    /* Form Group */
    .form-group {
        margin-bottom: 20px;
    }

    /* Labels */
    label.control-label {
        font-size: 1.1em;
        color: #534b58;
        font-weight: bold;
    }

    /* Input Fields */
    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        margin-top: 5px;
    }

    /* Validation Errors */
    .text-danger {
        color: red;
        font-size: 0.9em;
        margin-top: 5px;
    }

    /* Select Dropdown */
    select.form-control {
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-top: 5px;
    }

    /* Submit Button */
    .btn-edit {
        background-color: #f07b26;
        color: #fff;
        font-weight: bold;
        padding: 12px 25px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        width: 100%;
    }

        .btn-edit:hover {
            background-color: #d96a1f;
        }

    /* Back Link */
    div i.fa-reply {
        margin-right: 5px;
    }

    div a {
        font-size: 1.1em;
        color: #534b58;
        text-decoration: none;
    }

        div a:hover {
            color: #f07b26;
            text-decoration: underline;
        }

    /* Product Image */
    img {
        max-width: 200px;
        max-height: 200px;
        display: block;
        margin: 10px 0;
        border-radius: 8px;
    }

    /* Form Container Styling */
    hr {
        border: 1px solid #f07b26;
        margin-top: 10px;
        margin-bottom: 30px;
    }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}