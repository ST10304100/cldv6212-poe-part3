@model IEnumerable<CLDV6212_PART_3.Models.OrderRequest>

@{
    ViewData["Title"] = "Order Requests";
}
<div class="container-products">
    <h1>Order Requests</h1>

    <form asp-controller="OrderRequests" asp-action="Index" method="get" class="form-inline mb-4">
        <div class="form-group d-flex align-items-center mx-sm-3 mb-2">
            <label for="searchString" class="sr-only">Search by Order ID:</label>
            <input type="text" class="form-control form-control-sm" id="searchString" name="searchString" placeholder="Search by Order ID" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-primary btn-sm ml-2"><i class="fa fa-search" aria-hidden="true"></i> Search</button>
        </div>
    </form>


    <table>
        <thead>
            <tr>
                <th>Order Request ID</th>
                <th>Order ID</th>
                <th>Product Name</th>
                <th>Product Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderRequestId)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.Price)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<style>
    /* Container for Order Requests */
.container-products {
    max-width: 1200px;
    margin: 40px auto;
    padding: 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

/* Page Header */
h1 {
    color: #f07b26;
    font-size: 2.5em;
    text-align: center;
    margin-bottom: 30px;
}

/* Form Styling */
.form-inline {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
}

.form-group {
    display: flex;
    align-items: center;
}

.form-control {
    width: 250px;
    padding: 10px;
    font-size: 1em;
    border-radius: 4px;
    border: 1px solid #ddd;
}

.btn {
    padding: 8px 15px;
    background-color: #f07b26;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    margin-left: 10px;
    font-size: 1em;
}

.btn:hover {
    background-color: #d2691e;
}

.btn-sm {
    font-size: 0.9em;
    padding: 5px 10px;
}

/* Table Styling */
table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 30px;
    font-size: 1.1em;
    color: #534b58;
}

table th, table td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

table th {
    background-color: #f07b26;
    color: white;
    font-weight: bold;
}

table tr:nth-child(even) {
    background-color: #f9f9f9;
}

table tr:hover {
    background-color: #f1f1f1;
}


</style>